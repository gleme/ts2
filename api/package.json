{
  "name": "ts2-api",
  "version": "2.0.1",
  "private": true,
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "start": "node build/bin/www.js",
    "start:dev": "nodemon --exec babel-node src/bin/www.js",
    "build": "babel src/ --out-dir build/ --source-maps inline --copy-files --ignore spec.js",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "flow": "flow",
    "flow:start": "flow start",
    "flow:stop": "flow stop",
    "flow:status": "flow status",
    "flow:coverage": "flow coverage",
    "lint": "eslint src/*/*.js --config .eslintrc.json",
    "test": "npx mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "npx mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "cross-env NODE_ENV=test nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "clean": "rimraf build",
    "clean:all": "rimraf build node_modules"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "text",
      "html"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [
      ".js"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "ajv": "^6.10.0",
    "async": "^2.6.2",
    "body-parser": "^1.20.1",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "express": "~4.18.2",
    "express-boom": "^3.0.0",
    "express-validator": "^5.3.1",
    "lodash": "^4.17.15",
    "log4js": "^4.1.0",
    "moment": "^2.24.0",
    "mongodb": "^3.2.3",
    "morgan": "~1.9.0",
    "mysql": "^2.16.0",
    "typeorm": "^0.2.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.8.6",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^3.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.96.0",
    "husky": "^1.3.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint"
  }
}
